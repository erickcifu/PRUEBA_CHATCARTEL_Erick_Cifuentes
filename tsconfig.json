{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "experimentalDecorators": true,  // Habilitar decoradores
      "emitDecoratorMetadata": true,   // Habilitar metadatos de decoradores
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "lib": ["es2015"],
    "include": [
      "src/**/*"
    ],
  "exclude": [
    "node_modules"
  ]
  }